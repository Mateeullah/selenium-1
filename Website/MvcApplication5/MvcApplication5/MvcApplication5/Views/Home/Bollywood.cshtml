@{
    ViewBag.Title = "Bollywood";
}
<article style="margin-left:6%;margin-right:8%;width:87%">
                    
           @foreach (var s in Model)
           { 
               if(@s.language.Equals("bollywood"))
               {
            <a href="/Home/Movie/@s.Id">
            <fieldset  style="border-color:black ;border-radius: 10px;padding: 15px;margin:10px">
                    <img class="image" src="@s.picture" alt="" style="margin-right:10px;border-radius:15px;width:200px;height:180px;float:left">
                    <h1 style="color:black">@s.name</h1><br>
                    <p>        
                    @s.review       
                    </p>        
            </fieldset>
            </a>
               }
           }      

                
		</article>
